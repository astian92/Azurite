@model Azurite.Store.Wrappers.OrderW

@using Azurite.Store.Common;

@{
    ViewBag.Title = "CheckOut";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header">
                <h3>Order Summary</h3>
                <span class="devider"></span>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => Model.Id)
        @Html.HiddenFor(model => Model.Number)
        @Html.HiddenFor(model => Model.CustomerId)

        <div class="row">

            <div class="col-xs-12">
                <h4>Order Summary</h4>
                <hr />
            </div>

            <div class="col-xs-12 table-responsive">
                <table class="table cart-table cart-disable">
                    <thead>
                        <tr>
                            <th class="col-md-5">@ViewRes.SCProducts.TableHeaderColumn1</th>
                            <th class="col-md-2">@ViewRes.SCProducts.TableHeaderColumn3</th>
                            <th class="text-center col-md-1">@ViewRes.SCProducts.TableHeaderColumn2</th>
                            <th class="col-md-2">Remove</th>
                            <th class="text-right col-md-2">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.OrderedProducts)
                        {
                            var imagePath = "http://cdn.radiannagold.eu/cdn/files/";
                            if (product.ProductImages.Count() > 0)
                            {
                                imagePath += product.ProductImages.First().ImagePath;
                            }
                            else
                            {
                                imagePath = "";
                            }
                            <tr id="cart-item-@product.Id">
                                <td>
                                    <div class="col-xs-2">
                                        <a href="/Products/Details/@product.ActualProductId">
                                            <img src="@imagePath" alt="@product.CurrentLangName" class="img-responsive img-thumbnail" />
                                        </a>
                                    </div>
                                    <div class="col-xs-10">
                                        @product.CurrentLangName
                                    </div>
                                </td>
                                <td>
                                    @Html.TotalPrice(product.Price, product.Discount)
                                </td>
                                <td>
                                    <span>@product.Quantity</span>
                                </td>
                                <td>
                                    <a href="#" productid="@product.Id" class="label label-default cart-remove">
                                        <i class="fa fa-trash"></i>
                                        @ViewRes.SharedStrings.RemoveBtn
                                    </a>
                                </td>
                                <td class="text-right">
                                    @Html.TotalPrice(product.Total, 0, true)
                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="4">Total @Model.OrderedProducts.Count Items</td>
                            <td class="text-right">@Html.TotalPrice(Model.Total, 0, true)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


        <div class="row well">
            <div class="panel panel-gold">
                <div class="panel-heading">
                    <h4>Personal Info</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.FirstName, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.FirstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.LastName, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.LastName, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="panel panel-gold">
                <div class="panel-heading">
                    <h4>Contact Info</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.Email, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.Phone, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.Phone, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
        </div>


        <div class="row well">
            <div class="panel panel-gold">
                <div class="panel-heading">
                    <h4>Shipping address</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.Street, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.Street, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.Street, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.City, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.City, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.City, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.Country, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.Country, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.Country, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.ZipCode, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.ZipCode, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
        </div>

        <div class="row well">

            <div class="panel panel-gold">
                <div class="panel-heading">
                    <h4>Company Info</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.Company, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.Company, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.Company, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.Customer.VatID, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => Model.Customer.VatID, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => Model.Customer.VatID, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row well">

            <div class="panel panel-gold">
                <div class="panel-heading">
                    <h4>Any Comments to us</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => Model.Comment, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => Model.Comment, new { @class = "form-control" })
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-xs-12">
                <div class="col-md-2">
                    <a href="/ShoppingCart" class="btn btn-default btn-block">Back to Shopping Cart</a>
                </div>
                <div class="col-md-8"></div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-gold btn-block">Confirm Order</button>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

