@model IEnumerable<Azurite.Store.Wrappers.ProductW>
@using Azurite.Store.Common

@if(Model.Count() > 0)
{
    <div class="col-md-8">
        <h2 class="title">PRODUCTS</h2>
        <div class="">
            <div class="row cart-header">
                <div class="col-sm-8">
                    <p class="text-center">Product Details</p>
                </div>
                <div class="col-sm-2">
                    <p>Qty</p>
                </div>
                <div class="col-sm-2">
                    <p>Price</p>
                </div>
            </div>
            <hr />
            @foreach (var item in Model)
            {
                var imagePath = "http://localhost:8696/cdn/files/";
                if (item.ProductImages.Count() > 0)
                {
                    imagePath += item.ProductImages.First().ImagePath;
                }
                else
                {
                    imagePath = "";
                }

                <div class="row cart-item" productId="@item.Id">
                    <div class="col-xs-3 col-sm-2">
                        <a href="/Products/Details/@item.Id">
                            <img src="@imagePath" alt="@item.Name" class="img-responsive img-thumbnail" />
                        </a>
                    </div>
                    <div class="col-xs-7 col-sm-6">
                        <a href="/Products/Details/@item.Id"><h5>@item.Name</h5></a>
                        <a href="#" productId="@item.Id" class="btn-cart-remove">
                            <i class="fa fa-trash"></i>
                            Remove
                        </a>
                    </div>
                    <div class="col-xs-2 col-sm-2">
                        <input type="number" class="form-control" id="Quantity" name="Quantity" value="@item.Quantity" />
                    </div>
                    <div class="col-xs-offset-3 col-xs-9 col-sm-offset-0 col-sm-2">
                        <strong class="price-header">Price</strong> @Html.TotalPrice(item.Price, item.Discount)
                    </div>
                    <div class="col-xs-12">
                        <hr />
                    </div>
                </div>
                <div class="clearfix"></div>
            }
        </div>
    </div>
    <div class="col-md-4">
        <h2 class="title">SUBTOTAL</h2>
        <div class="panel">

        </div>
    </div>
}
else
{
    <div class="col-xs-12">
        <p class="page-message text-center">There are no items in your cart. <strong><a href="/Home">Continue Shopping <i class="fa fa-arrow-right"></i></a></strong></p>
        <div id="promotionsContainer">

        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#promotionsContainer').html('');
            $.ajax({
                url: MVC.Products.GetPromoProductsFull,
                dataType: 'html',
                success: function (data) {
                    $('#promotionsContainer').html(data);
                }
            });
        });
    </script>
}
<script src="~/Scripts/App/ShoppingCart/shopping_cart_products.js"></script>