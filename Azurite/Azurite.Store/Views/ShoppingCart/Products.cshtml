@model IEnumerable<Azurite.Store.Wrappers.ProductW>


@if(Model.Count() > 0)
{
    <div class="col-md-8">
        <h2 class="title">PRODUCTS</h2>
        @foreach (var item in Model) {
            <div class="cart-item">
                <div class="col-sm-6">
                    <p>
                        <img src="" alt="@item.Name" class="img-responsive thumbnail" />
                    </p>
                </div>
                <div class="col-sm-6">
                    <a href="/Products/Details/@item.Id"><p>@item.Name</p></a>
                    @Html.DisplayFor(modelItem => item.Price)
                    @Html.DisplayFor(modelItem => item.Discount)
                    @Html.DisplayFor(modelItem => item.Quantity)
                    <a class="btn btn-default">Remove</a>
                </div>
            </div>
            <div class="clearfix"></div>
        }
    </div>
    <div class="col-md-4">
        <h2 class="title">SUBTOTAL</h2>
    </div>
}
else
{
    <div class="col-xs-12">
        <p class="page-message text-center">There are no items in your cart. <strong><a href="/Home">Continue Shopping <i class="fa fa-arrow-right"></i></a></strong></p>
        <div id="promotionsContainer">

        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#promotionsContainer').html('');
            $.ajax({
                url: MVC.Products.GetPromoProductsFull,
                dataType: 'html',
                success: function (data) {
                    $('#promotionsContainer').html(data);
                }
            });
        });
    </script>
}