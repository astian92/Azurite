@model Azurite.Store.Wrappers.CategoryW

@{
    ViewBag.Title = "Collections";
}


<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header">
                <h3>@Model.Name</h3>
                <input id="categoryId" name="categoryId" value="@Model.Id" type="hidden" />
                <span class="devider"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
            <div class="panel-gold">
                <div class="panel-heading">@ViewRes.CategoriesIndex.Collections</div>
                <div id="subCategoriesContainer" class="side-nav">
                    
                </div>
            </div>
            <div class="panel-gold">
                <div class="panel-heading">@ViewRes.CategoriesIndex.PriceFilter</div>
                <div id="priceFilter">

                </div>
            </div>
            <div id="categoriesAttrContainer">

            </div>
        </div>
        <div class="col-md-9 col-sm-8 col-xs-12">
            <div class="filterArea">
                <div class="col-xs-6">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                            Най-продавани
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">Най-продавани</a></li>
                            <li><a href="#">Цена възх.</a></li>
                            <li><a href="#">Цена низх.</a></li>
                            <li><a href="#">Отстъпка.</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="input-group">
                        <input id="search" type="text" class="form-control form-control-lg" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button id="search-products" class="btn btn-gold" type="button"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
            <div id="productsContainer">

            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/App/Categories/category_products.js"></script>

}
