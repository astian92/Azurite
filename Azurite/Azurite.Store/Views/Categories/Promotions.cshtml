@{
    ViewBag.Title = "Special Offers";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header">
                <h3>@ViewRes.CategoriesPromotions.PageHeader</h3>
                <input id="categoryId" name="categoryId" value="" type="hidden" />
                <span class="devider"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
            <div class="panel-gold">
                <div class="panel-heading">@ViewRes.CategoriesIndex.Collections</div>
                <div id="subCategoriesContainer" class="side-nav">

                </div>
            </div>
            <div class="panel-gold">
                <div class="panel-heading">@ViewRes.CategoriesIndex.PriceFilter</div>
                <div id="priceFilter">

                </div>
            </div>
        </div>
        <div class="col-md-9 col-sm-8 col-xs-12">
            <div class="filterArea">

            </div>
            <div id="productsContainer">

            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/App/Categories/promotions_products.js"></script>
}

