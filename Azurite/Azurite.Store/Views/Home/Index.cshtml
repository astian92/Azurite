@{
    ViewBag.Title = "Home Page";
}

<div id="mainCarousel" class="main-slide carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#mainCarousel" data-slide-to="1"></li>
        <li data-target="#mainCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Resources/rg-slide1.jpg" alt="Radianna Gold Store">
            <div class="carousel-caption">
                <div class="col-md-offset-2 col-md-8">
                    <div class="carousel-caption-container">
                        <h3>@ViewRes.Index.CarouselCaption1</h3>
                        <h2>@ViewRes.Index.CarouselSubCaption1</h2>
                    </div>
                    <a href="#" class="btn btn-gold">@ViewRes.Index.CarouselBtnCaption1</a>
                </div>
            </div>
        </div>

        <div class="item">
            <img src="~/Resources/rg-slide2.jpg" alt="Radianna Gold Store">
            <div class="carousel-caption">
                <div class="col-md-offset-2 col-md-8">
                    <div class="carousel-caption-container">
                        <h3>@ViewRes.Index.CarouselCaption2</h3>
                        <h2>@ViewRes.Index.CarouselSubCaption2</h2>
                    </div>
                    <a href="#" class="btn btn-gold">@ViewRes.Index.CaoruselBtnCaption2</a>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/Resources/rg-slide3.jpg" alt="Radianna Gold Store">
            <div class="carousel-caption">
                <div class="col-md-offset-2 col-md-8">
                    <div class="carousel-caption-container">
                        <h3>@ViewRes.Index.CarouselCaption3</h3>
                        <h2>@ViewRes.Index.CarouselSubCaption3</h2>
                    </div>
                    <a href="#" class="btn btn-gold">@ViewRes.Index.CarouselBtnCaption3</a>
                </div>
            </div>
        </div>

        <a class="left carousel-control" href="#mainCarousel" role="button" data-slide="prev">
            <span class="fa fa-angle-left fa-4x" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#mainCarousel" role="button" data-slide="next">
            <span class="fa fa-angle-right fa-4x" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="clearfix"></div>
<div class="container">
    <div class="col-xs-12">
        <div class="page-header">
            <h3>@ViewRes.Index.Collections</h3>
            <span class="devider"></span>
        </div>
        <div id="categoriesContainer" class="collections">

        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-xs-12">
        <div class="page-header">
            <h3>@ViewRes.Index.Promotions</h3>
            <span class="devider"></span>
        </div>
        <div id="promotionsContainer" class="collections">

        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/App/Categories/categories.js"></script>
}