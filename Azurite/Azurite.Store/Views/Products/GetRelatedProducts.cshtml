@model IEnumerable<Azurite.Store.Wrappers.ProductW>
@using Azurite.Store.Common

@{
    ViewBag.Title = "Related Products";
}

<div class="products-list">
    @foreach (var item in Model)
    {
        var imagePath = "http://cdn.radiannagold.eu/cdn/files/";
        if (item.ProductImages.Count() > 0)
        {
            imagePath += item.ProductImages.First().ImagePath;
        }
        else
        {
            imagePath = "";
        }

        <div class="col-xs-6 col-md-3 col-sm-6">
            <div class="product-col">
                <div class="thumbnail image">
                    <a href="/Products/Details/@item.Id">
                        <img src="@imagePath" alt="@item.Name" />
                    </a>
                </div>
                <div class="caption">
                    <h4>
                        <a href="/Products/Details/@item.Id">
                            @item.Name
                        </a>
                    </h4>
                    <div class="price">
                        @Html.Price(item.Price, item.Discount)
                    </div>
                </div>
            </div>
        </div>
    }
</div>